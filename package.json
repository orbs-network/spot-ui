{
  "name": "spot-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:lh": "pnpm build:liquidity-hub && pnpm --filter web dev",
    "start": "pnpm --filter web start",
    "build": "pnpm build:spot-ui && pnpm build:liquidity-hub && pnpm build:spot-react && pnpm --filter web build",
    "build:spot-ui": "pnpm --filter @orbs-network/spot-ui build",
    "build:liquidity-hub": "pnpm --filter @orbs-network/liquidity-hub-sdk build",
    "build:spot-react": "pnpm --filter @orbs-network/spot-react build",
    "build:web": "pnpm --filter web build",
    "publish:spot-ui": "node scripts/publish-spot-ui.mjs",
    "publish:spot-react": "node scripts/publish-spot-react.mjs",
    "publish:liquidity-hub-sdk": "node scripts/publish-liquidity-hub.mjs",
    "login-npm": "npm login --auth-type=web"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.1"
}
